{
  "name": "custom-linter",
  "displayName": "My Linter",
  "publisher": "yourname",
  "version": "0.1.0",
  "engines": { "vscode": "^1.85.0" },
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "My Linter",
      "properties": {
        "mylinter.enabled": { "type": "boolean", "default": true },
        "mylinter.languages": {
          "type": "array",
          "description": "Language IDs to lint. Empty = all.",
          "items": { "type": "string" },
          "default": []
        },
        "mylinter.enableRules": {
          "type": "array",
          "description": "Rule IDs to enable. Empty = enable all registered rules.",
          "items": { "type": "string" },
          "default": []
        },
        "mylinter.ruleOptions": {
          "type": "object",
          "description": "Per-rule options keyed by rule id.",
          "default": {}
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "typescript": "^5.5.0",
    "vsce": "^2.15.0"
  }
}